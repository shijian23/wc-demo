/* 支付密码css start */
.bgLayer {
	position: fixed;
	left: 0;
	top: 0;
	bottom: 0;
	right: 0;
	background-color: rgba(0, 0, 0, 0.6);
	z-index: 9998;
}
.inputMain {
	position: fixed;
	left: 0;
	bottom: 500rpx;
	width: 100%;
	height: 594rpx;
	background-color: #fff;
	z-index: 9999;
}
.inputTitle {
	width: 100%;
	height: 90rpx;
	line-height: 90rpx;
	text-align: center;
	font-size: 32rpx;
	border-bottom: 1rpx solid #e2e2e2;
}
.inputBack {
	position: absolute;
	left: 0;
	top: 0;
	width: 80rpx;
	height: 90rpx;
	display: flex;
	justify-content: center;
	align-items: center;
	margin-left: 60rpx;
}
.inputBack text {
	font-size: 16px;
	font-weight: 400;
	text-align: left;
	color: #333333;
}
.optTitle {
	display: flex;
	align-items: center;
	justify-content: center;
	width: 750rpx;
	height: 38rpx;
	font-size: 36rpx;
	font-weight: 700;
	color: #333333;
	line-height: 58rpx;
	margin-top: 40rpx;
}

/* 密码掩码模拟 */
.inputRow {
	width: 750rpx;
	margin: 0 auto;
	height: 98rpx;
	position: relative;
	display: flex;
	align-items: center;
	margin-top: 60rpx;
	padding: 0 60rpx;
}
.inputRow .pwdItem {
	flex: 1;
	display: flex;
	align-items: center;
	justify-content: center;
	height: 100%;
	border: 1rpx solid #e2e2e2;
	position: relative;
	margin-right: 34rpx;
	width: 76rpx;
	height: 76rpx;
	border-radius: 8rpx;
	color: red;
}
.pwdItem:nth-last-of-type(1) {
	margin: 0;
}
.pwdItem text {
	width: 30rpx;
	height: 30rpx;
	border-radius: 30rpx;
	background-color: #555;
}

.forgetPwd {
	float: right;
	margin: 30rpx;
	width: 150rpx;
	text-align: right;
	font-size: 24rpx;
	font-weight: 700;
	color: #b08258;
}
.passwordTip {
	margin: 30rpx;
	opacity: 0.5;
	font-size: 24rpx;
	font-weight: 400;
	text-align: right;
	color: #333333;
}

.redPasswordTip {
	margin: 30rpx;
	opacity: 0.5;
	font-size: 24rpx;
	font-weight: 400;
	text-align: right;
	color: #ff0000;
}

/* 文本输入框位置: 设置到左边隐藏 */
.inputControl {
	position: relative;
	left: -300rpx;
	bottom: 0;
	width: 100rpx;
	height: 100rpx;
}
