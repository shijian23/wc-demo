.btnPay {
    margin: 100rpx auto;
    width: 600rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-radius: 100rpx;
    background-color: #d3a95a;
    color: #fff;
    font-size: 36rpx;
    text-align: center;
}
/* 支付密码css start */
.bgLayer {
    position: fixed;
    left: 0;
    top: 0;
    bottom: 0;
    right: 0;
    background-color: rgba(0, 0, 0, 0.6);
    z-index: 9998;
}
.inputMain {
    position: fixed;
    left: 0;
    bottom: 500rpx;
    width: 100%;
    height: 394rpx;
    background-color: #fff;
    z-index: 9999;
}
.inputTitle {
    width: 100%;
    height: 90rpx;
    line-height: 90rpx;
    text-align: center;
    font-size: 32rpx;
    border-bottom: 1rpx solid #e2e2e2;
}
.inputBack {
    position: absolute;
    left: 0;
    top: 0;
    width: 80rpx;
    height: 90rpx;
    display: flex;
    justify-content: center;
    align-items: center;
}

