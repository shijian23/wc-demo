<view class="modal-mask" wx:if="{{show}}">
  <view class="modal-content">
    <scroll-view scroll-y class="main-content">
      <slot></slot>
    </scroll-view>
    <view class="modal-footer">
      <view wx:if="{{!single}}" class="cancel-btn" bindtap="cancel">取消</view>
      <button style="width:60vw" class='btn1' disabled="{{!ready}}" bindtap="confirm" >
        <view>确定<view class="time" wx-if="{{timeClose}}" bindchange="timeChange">({{time}}秒后可关闭)</view></view>
      </button> 
    </view>
  </view>
</view>
